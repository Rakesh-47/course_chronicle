{
  "version": 2,
  "functions": {
    "Backend/index.js": {
      "includeFiles": "Backend/Data/**/*"
    }
  },
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/dist/index.html"
    }
  ]
}